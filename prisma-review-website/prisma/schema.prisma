// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      String   @id @default(uuid())
  name    String
  email   String   @unique
  role    role
  books   Book[]
  reviews Review[]
}

model Book {
  id     String   @id @default(uuid())
  title  String
  isbn   String
  author User     @relation(fields: [userId], references: [id])
  userId String
  reviews Review[]
}

model Review {
  id     String  @id @default(uuid())
  rating Int
  text   String?
  author User    @relation(fields: [userId], references: [id])
  book   Book    @relation(fields: [bookId], references: [id])
  userId String
  bookId String
}

enum role {
  CONSUMER
  VENDOR
}
